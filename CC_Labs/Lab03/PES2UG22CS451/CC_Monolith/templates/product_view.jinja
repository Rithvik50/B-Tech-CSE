<html>
<head>
    <title>{{srn}} Viewing {{ product.name }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="container max-w-lg mx-auto p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">{{ product.name }}</h1>
        <p class="text-lg text-green-600 font-semibold mb-2">â‚¹{{ product.cost }}</p>
        <p class="text-sm text-gray-600 mb-2">{{ product.qty }} remaining</p>
        <p class="text-gray-700 mb-6">{{ product.description }}</p>
        <form action="/cart/{{ product.id }}" method="POST" class="text-center">
            <input type="hidden" name="id" value="{{ product.id }}">
            <button 
                type="submit" 
                class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400"
            >
                Add to Cart
            </button>
        </form>
    </div>
</body>
</html>
